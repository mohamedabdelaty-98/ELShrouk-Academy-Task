@model BusinessAccessLayer.Models.Cashier

@{
    ViewData["Title"] = "GetById";
}

<div class="card mb-3">
    <div class="card-header">
        <h4 class="card-title" dir="rtl">تفاصيل الكاشير</h4>
    </div>
    <div class="card-body">
        <dl class="row" dir="rtl">
            <dt class="col-sm-3">
                <label asp-for="CashierName">اسم الكاشير</label>
            </dt>
            <dd class="col-sm-9">
                <span asp-for="@Model.CashierName" class="form-control">@Model.CashierName</span>
            </dd>
            <dt class="col-sm-3">
                <label asp-for="Branch">فرع</label>
            </dt>
            <dd class="col-sm-9">
                <span asp-for="@Model.Branch.BranchName" class="form-control">@Model.Branch.BranchName</span>
            </dd>
            <dt class="col-sm-3">
                <label asp-for="@Model.InvoiceHeaders">الفاتوره</label>
            </dt>
            @foreach (var invoice in Model.InvoiceHeaders)
            {
                <div class="col-sm-9 mt-3">
                    <div class="card">
                        <div class="card-header">
                            <strong>اسم العميل:</strong> @invoice.CustomerName
                        </div>
                        <div class="card-body">
                            <div class="invoice-details">
                                @foreach (var invoicedetails in invoice.InvoiceDetails)
                                {
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <strong>اسم العنصر:</strong> @invoicedetails.ItemName
                                        </div>
                                        <div class="col-sm-6">
                                            <strong>سعر العنصر:</strong> @invoicedetails.ItemPrice
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </dl>
    </div>
    <div class="card-footer" dir="rtl">
        <a asp-action="Update" asp-route-id="@Model?.ID" class="btn btn-primary">تعديل</a>
        <a asp-action="Index" class="btn btn-secondary">العودة للقائمة</a>
    </div>
</div>


